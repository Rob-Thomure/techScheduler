<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="250.0" prefWidth="320"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportsMenuController">
    <children>
        <VBox prefHeight="250.0" prefWidth="320.0">
            <children>
                <VBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                    <children>
                        <Label text="Reports">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="320.0" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onActionDisplayAppointmentTypes" text="Number of Appointment Types By Month" />
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionDisplayConsultantSchedule" text="Schedule for each Consultant" />
                        <Button layoutX="10.0" layoutY="37.0" mnemonicParsing="false" onAction="#onActionDisplayConsultantTotalAppointments" text="Total Number of Appointments for Each Consultant" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="320.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onActionAppointments" text="Appointments" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
